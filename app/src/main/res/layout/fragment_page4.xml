<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginBottom="35dp"
                android:text="设置"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="监听服务"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_service"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="开启/关闭"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="开机启动"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_auto"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="是/否"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="管理监听列表"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_list"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="查看列表"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="通知栏图标"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_notification"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="显示/隐藏"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="清除历史记录"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_clear"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="立即清除"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="清空监听列表"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_clear_list"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="立即清除"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="帮助"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/setting_help"
                    fancy:fb_radius="15dp"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_borderColor="#ffffff"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    fancy:fb_defaultColor="#3b5998"
                    fancy:fb_focusColor="#5474b8"
                    android:layout_alignParentRight="true"
                    fancy:fb_text="查看"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    

</LinearLayout>