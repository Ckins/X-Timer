<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FA"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/add_app_toolbar"
            layout="@layout/toolbar_base" />
    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/app_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/add_app_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="已选0个应用"
                android:layout_marginRight="15dp"
                android:textSize="22sp"/>
            <Button
                android:id="@+id/add_app_ok"
                android:background="@drawable/my_button1"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="确定"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="or"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:textSize="22sp"/>
            <Button
                android:id="@+id/add_app_cancel"
                android:background="@drawable/my_button2"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="取消"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>